{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "./types",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "types": [
      "node"
    ],
    "lib": ["es5", "es2015.promise"]
  },
  "exclude": [
    "node_modules",
    "out"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}